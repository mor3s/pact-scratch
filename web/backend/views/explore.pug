
html
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
        title Explore
    body
        div(class="bg-dark")
            div(class="container")
                div(class="row")
                    nav(class="col navbar navbar-expand-lg navbar-dark")
                        a("navbar-brand" href=url_main)
                            img(src="images/logo_Adjuteo.png" width="60" height="70" alt="logo")
                            Adjuteo
                        button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent")
                            span(class="navbar-toggler-icon")
                        div(id="navbarContent" class="collapse navbar-collapse")
                            ul(class="navbar-nav")
                                li(class="nav-item")
                                    a(class="nav-link" href = url_main) Acceuil 
                                li(class="nav-item")
                                    a(class="nav-link" href = url_chat) chat  
                                li(class="nav-item")
                                    a(class="nav-link active" href = url_explore) explore  
                                li(class="nav-item")
                                    a(class="nav-link" href = url_publish) publish
                                li(class="nav-item")
                                    a(class="nav-link" href = url_profile) Mon compte     
  
        div(class="container")
            div(class="row mb-3")
                div(class="col")
                    h3 Explore

            //searchbar
            div(class="row mb-3")
                div(class="col")
                input(class="form-control" id="searchInput" type="text" placeholder="Search..")

            // Génération auto des annonces
            - titles = data_titles;
            - descriptifs = data_descriptifs;
            - permanent = isPerm;
            div(class="row" id="lessonList")
                each titre, n in titles
                    div(class="card-group col-12 col-lg-3 mb-3")
                        div(class="card mb-4 mb-lg-0 border-light shadow ")
                            div(class="card-header")
                                if(permanent[n]==1)
                                    h6 Permanent
                                else
                                    h6 Temporary    
                            div(class="card-body ")
                                h5(class="card-title")= titre
                                if (descriptifs[n].length < 150) 
                                    p(class="card-text")= descriptifs[n] 
                                else
                                    p(class="card-text")= ((descriptifs[n]).substring(0,150) + "...")
                                a(class="btn btn-primary" href="#" role="button") Voir l'annonce
                            div(class="card-footer")
                                small(class="text-muted") Last updated 3 mins ago
            
        div(class="bg-light mt-5")
            div(class="container")
                div(class="row pt-4 pb-3")
                    div(class="col")
                        ul(class="list-inline text-center")
                            li(class="list-inline-item")
                                a(href = url_help) help
                            li(class="list-inline-item") &middot;
                            li(class="list-inline-item")
                                a(href ="#") À propos
                            li(class="list-inline-item") &middot;
                            li(class="list-inline-item")
                                a(href ="#") Conditions d'utilisations 
 

        

        script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous")
        script.
            $(document).ready(function() {
                $("#searchInput").on("keyup", function() {
                    var value = $(this).val().toLowerCase();
                    $("#lessonList .col-12").filter(function() {
                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                    });
                });
            });